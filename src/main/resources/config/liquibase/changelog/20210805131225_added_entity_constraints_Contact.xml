<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <!--
        Added the constraints for entity Contact.
    -->
    <changeSet id="20210805131225-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="contact_main_address_id"
                                 baseTableName="contact"
                                 constraintName="fk_contact__contact_main_address_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contact_address"/>

        <addForeignKeyConstraint baseColumnNames="contact_id"
                                 baseTableName="rel_contact__relations"
                                 constraintName="fk_rel_contact__relations__contact_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contact"/>

        <addForeignKeyConstraint baseColumnNames="relations_id"
                                 baseTableName="rel_contact__relations"
                                 constraintName="fk_rel_contact__relations__relations_id"
                                 referencedColumnNames="id"
                                 referencedTableName="contact_relation"/>
    </changeSet>
</databaseChangeLog>
